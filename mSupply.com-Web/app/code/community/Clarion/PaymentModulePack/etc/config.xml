<config>
	<modules>
		<Clarion_PaymentModulePack>
			<version>1.0.0</version>
		</Clarion_PaymentModulePack>
	</modules>
	<global>
		<helpers>
			<paymentmodulepack>
				<class>Clarion_PaymentModulePack_Helper</class>
			</paymentmodulepack>
		</helpers>
		<blocks>
			<paymentmodulepack>
				<class>Clarion_PaymentModulePack_Block</class>
			</paymentmodulepack>
		</blocks>
		<models>
			<paymentmodulepack>
				<class>Clarion_PaymentModulePack_Model</class>
				<resourceModel>paymentmodulepack_mysql4</resourceModel>
			</paymentmodulepack>
		</models>
		<resources>
			<paymentmodulepack_setup>
				<setup>
					<module>Clarion_PaymentModulePack</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</paymentmodulepack_setup>
			<paymentmodulepack_read>
				<connection>
					<use>core_read</use>
				</connection>
			</paymentmodulepack_read>
			<paymentmodulepack_write>
				<connection>
					<use>core_write</use>
				</connection>
			</paymentmodulepack_write>
		</resources>
		<fieldsets>
             <sales_convert_quote_payment>
                <check_no>
                    <to_order_payment>*</to_order_payment>
                </check_no>
                <check_date>
                    <to_order_payment>*</to_order_payment>
                </check_date>
				<draweename>
                    <to_order_payment>*</to_order_payment>
                </draweename>
				<draweebank>
                    <to_order_payment>*</to_order_payment>
                </draweebank>
				<cheqloc>
                    <to_order_payment>*</to_order_payment>
                </cheqloc>
				<panno>
                    <to_order_payment>*</to_order_payment>
                </panno>
             </sales_convert_quote_payment>
        </fieldsets>
	</global>
	<frontend>
		<layout>
			<updates>
				<paymentmodulepack>
					<file>paymentmodulepack.xml</file>
				</paymentmodulepack>
			</updates>
		</layout>
		<routers>
			<paymentmodulepack>
				<use>standard</use>
				<args>
					<module>Clarion_PaymentModulePack</module>
					<frontName>customcard</frontName>
				</args>
			</paymentmodulepack>
		</routers>
	</frontend>
	<default>
		<payment>
            <paymentmodulepack>
                <active>1</active>
                <model>paymentmodulepack/paymentmodulepack</model>
                <order_status>processing</order_status>
                <title>Cheque Payment</title>
            </paymentmodulepack>
		<!--	<paymentmodulepack_checkout>
                <active>1</active>
                <model>paymentmodulepack/standard</model>
                <order_status>processing</order_status>
                <title>Custom Gateway</title>
				<payment_action>sale</payment_action>
				<submit_url>https://www.google.com</submit_url>
				<merchant_id>Insert merchant id</merchant_id>
				<allowspecific>0</allowspecific>
				<sort_order>1</sort_order>
            </paymentmodulepack_checkout> -->
         </payment>
	</default>
</config>

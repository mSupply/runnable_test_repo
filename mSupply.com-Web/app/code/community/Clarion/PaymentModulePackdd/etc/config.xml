<config>
	<modules>
		<Clarion_PaymentModulePackdd>
			<version>1.0.0</version>
		</Clarion_PaymentModulePackdd>
	</modules>
	<global>
		<helpers>
			<paymentmodulepackdd>
				<class>Clarion_PaymentModulePackdd_Helper</class>
			</paymentmodulepackdd>
		</helpers>
		<blocks>
			<paymentmodulepackdd>
				<class>Clarion_PaymentModulePackdd_Block</class>
			</paymentmodulepackdd>
		</blocks>
		<models>
			<paymentmodulepackdd>
				<class>Clarion_PaymentModulePackdd_Model</class>
				<resourceModel>paymentmodulepackdd_mysql4</resourceModel>
			</paymentmodulepackdd>
		</models>
		<resources>
			<paymentmodulepackdd_setup>
				<setup>
					<module>Clarion_PaymentModulePackdd</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</paymentmodulepackdd_setup>
			<paymentmodulepackdd_read>
				<connection>
					<use>core_read</use>
				</connection>
			</paymentmodulepackdd_read>
			<paymentmodulepackdd_write>
				<connection>
					<use>core_write</use>
				</connection>
			</paymentmodulepackdd_write>
		</resources>
		<fieldsets>
             <sales_convert_quote_payment>
                <deno1000>
                    <to_order_payment>*</to_order_payment>
                </deno1000>
                <deno500>
                    <to_order_payment>*</to_order_payment>
                </deno500>
				  <deno100>
                    <to_order_payment>*</to_order_payment>
                </deno100>
                <deno50>
                    <to_order_payment>*</to_order_payment>
                </deno50>
				  <deno20>
                    <to_order_payment>*</to_order_payment>
                </deno20>
                <deno10>
                    <to_order_payment>*</to_order_payment>
                </deno10>
				  <othersdd>
                    <to_order_payment>*</to_order_payment>
                </othersdd>
                <localchq>
                    <to_order_payment>*</to_order_payment>
                </localchq>
             </sales_convert_quote_payment>
        </fieldsets>
	</global>
	<frontend>
		<layout>
			<updates>
				<paymentmodulepackdd>
					<file>paymentmodulepackdd.xml</file>
				</paymentmodulepackdd>
			</updates>
		</layout>
		<routers>
			<paymentmodulepackdd>
				<use>standard</use>
				<args>
					<module>Clarion_PaymentModulePackdd</module>
					<frontName>customcard</frontName>
				</args>
			</paymentmodulepackdd>
		</routers>
	</frontend>
	<default>
		<payment>
<!--            <paymentmodulepackdd>
                <active>1</active>
                <model>paymentmodulepackdd/paymentmodulepack</model>
                <order_status>processing</order_status>
                <title>Cheque Payment</title>
            </paymentmodulepackdd> -->
			<paymentmodulepackdd_checkout>
                <active>1</active>
                <model>paymentmodulepackdd/standard</model>
                <order_status>processing</order_status>
                <title>Custom Gateway</title>
				<payment_action>sale</payment_action>
				<submit_url>https://www.google.com</submit_url>
				<merchant_id>Insert merchant id</merchant_id>
				<allowspecific>0</allowspecific>
				<sort_order>1</sort_order>
            </paymentmodulepackdd_checkout>
         </payment>
	</default>
</config>

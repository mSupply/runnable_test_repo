<config>
    <modules>
        <Mage_Hdfcdc>
            <version>0.1.0</version>
        </Mage_Hdfcdc>
    </modules>
    <global>
        <models>
            <hdfcdc>
                <class>Mage_Hdfcdc_Model</class>
                <resourceModel>hdfcdc_mysql4</resourceModel>
            </hdfcdc>
            <hdfcdc_mysql4>
                <class>Mage_Hdfcdc_Model_Mysql4</class>
                <entities>
                    <api_debug><table>hdfcdc_api_debug</table></api_debug>
                </entities>
            </hdfcdc_mysql4>
        </models>
        <resources>
            <hdfcdc_setup>
                <setup>
                    <module>Mage_Hdfcdc</module>
                    <class>Mage_Hdfcdc_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </hdfcdc_setup>
            <hdfcdc_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </hdfcdc_write>
            <hdfcdc_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </hdfcdc_read>
        </resources>
        <blocks>
            <hdfcdc><class>Mage_Hdfcdc_Block</class></hdfcdc>
        </blocks>
        <payment>
            <cc>
                <types>
                    <DI>
                        <code>DI</code>
                        <name>Discover</name>
                        <order>60</order>
                    </DI>
                    <JCB>
                        <code>JCB</code>
                        <name>JCB</name>
                        <order>61</order>
                    </JCB>
                    <DICL>
                        <code>DICL</code>
                        <name>Diners Club</name>
                        <order>62</order>
                    </DICL>
                    <ENR>
                        <code>ENR</code>
                        <name>enRoute</name>
                        <order>63</order>
                    </ENR>
                    <SS>
                        <code>SS</code>
                        <name>Switch/Solo</name>
                        <order>64</order>
                    </SS>
                </types>
            </cc>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <hdfcdc_standard>/hdfcdc/standard</hdfcdc_standard>
        </secure_url>
        <routers>
            <hdfcdc>
                <use>standard</use>
                <args>
                    <module>Mage_Hdfcdc</module>
                    <frontName>hdfcdc</frontName>
                </args>
            </hdfcdc>
        </routers>
        <translate>
            <modules>
                <Mage_Hdfcdc>
                    <files>
                        <default>Mage_Hdfcdc.csv</default>
                    </files>
                </Mage_Hdfcdc>
            </modules>
        </translate>
        <layout>
            <updates>
                <hdfcdc>
                    <file>hdfcdc.xml</file>
                </hdfcdc>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Hdfcdc>
                    <files>
                        <default>Mage_Hdfcdc.csv</default>
                    </files>
                </Mage_Hdfcdc>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <hdfcdc_standard>
                  <model>hdfcdc/standard</model>
                  <title>hdfcdc Standard</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
            </hdfcdc_standard>
        </payment>
    </default>
</config>

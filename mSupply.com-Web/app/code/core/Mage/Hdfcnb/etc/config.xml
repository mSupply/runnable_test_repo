<config>
    <modules>
        <Mage_Hdfcnb>
            <version>0.1.0</version>
        </Mage_Hdfcnb>
    </modules>
    <global>
        <models>
            <hdfcnb>
                <class>Mage_Hdfcnb_Model</class>
                <resourceModel>hdfcnb_mysql4</resourceModel>
            </hdfcnb>
            <hdfcnb_mysql4>
                <class>Mage_Hdfcnb_Model_Mysql4</class>
                <entities>
                    <api_debug><table>hdfcnb_api_debug</table></api_debug>
                </entities>
            </hdfcnb_mysql4>
        </models>
        <resources>
            <hdfcnb_setup>
                <setup>
                    <module>Mage_Hdfcnb</module>
                    <class>Mage_Hdfcnb_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </hdfcnb_setup>
            <hdfcnb_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </hdfcnb_write>
            <hdfcnb_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </hdfcnb_read>
        </resources>
        <blocks>
            <hdfcnb><class>Mage_Hdfcnb_Block</class></hdfcnb>
        </blocks>
        <payment>
            <cc>
                <types>
                    <DI>
                        <code>DI</code>
                        <name>Discover</name>
                        <order>60</order>
                    </DI>
                    <JCB>
                        <code>JCB</code>
                        <name>JCB</name>
                        <order>61</order>
                    </JCB>
                    <DICL>
                        <code>DICL</code>
                        <name>Diners Club</name>
                        <order>62</order>
                    </DICL>
                    <ENR>
                        <code>ENR</code>
                        <name>enRoute</name>
                        <order>63</order>
                    </ENR>
                    <SS>
                        <code>SS</code>
                        <name>Switch/Solo</name>
                        <order>64</order>
                    </SS>
                </types>
            </cc>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <hdfcnb_standard>/hdfcnb/standard</hdfcnb_standard>
        </secure_url>
        <routers>
            <hdfcnb>
                <use>standard</use>
                <args>
                    <module>Mage_Hdfcnb</module>
                    <frontName>hdfcnb</frontName>
                </args>
            </hdfcnb>
        </routers>
        <translate>
            <modules>
                <Mage_Hdfcnb>
                    <files>
                        <default>Mage_Hdfcnb.csv</default>
                    </files>
                </Mage_Hdfcnb>
            </modules>
        </translate>
        <layout>
            <updates>
                <hdfcnb>
                    <file>hdfcnb.xml</file>
                </hdfcnb>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Hdfcnb>
                    <files>
                        <default>Mage_Hdfcnb.csv</default>
                    </files>
                </Mage_Hdfcnb>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <hdfcnb_standard>
                  <model>hdfcnb/standard</model>
                  <title>hdfcnb Standard</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
            </hdfcnb_standard>
        </payment>
    </default>
</config>

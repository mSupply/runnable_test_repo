        <Msupply_Configuration>
            <version>0.1.0</version>
        </Msupply_Configuration>
    </modules>
    <frontend>
        <routers>
            <configuration>
                <use>standard</use>
                <args>
                    <module>Msupply_Configuration</module>
                    <frontName>configuration</frontName>
                </args>
            </configuration>
        </routers>
        <layout>
            <updates>
                <configuration>
                    <file>configuration.xml</file>
                </configuration>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <configuration>
                <use>admin</use>
                <args>
                    <module>Msupply_Configuration</module>
                    <frontName>configuration</frontName>
                </args>
            </configuration>
        </routers>
    </admin>

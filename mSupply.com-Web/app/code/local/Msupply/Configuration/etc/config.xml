        </layout>
    </adminhtml>
    <global>
        <models>
            <configuration>
                <class>Msupply_Configuration_Model</class>
                <resourceModel>configuration_mysql4</resourceModel>
            </configuration>
            <configuration_mysql4>
                <class>Msupply_Configuration_Model_Mysql4</class>
                <entities>
                    <configuration>
                        <table>configuration</table>
                    </configuration>
                </entities>
            </configuration_mysql4>
        </models>
        <resources>
            <configuration_setup>
                <setup>
                    <module>Msupply_Configuration</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </configuration_setup>
            <configuration_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </configuration_write>
            <configuration_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </configuration_read>
        </resources>
        <blocks>
            <configuration>
                <class>Msupply_Configuration_Block</class>
            </configuration>
        </blocks>
        <helpers>
            <configuration>
                <class>Msupply_Configuration_Helper</class>
            </configuration>
        </helpers>
    </global>

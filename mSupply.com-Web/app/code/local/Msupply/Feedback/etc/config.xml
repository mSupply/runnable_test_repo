<?xml version="1.0"?>
<config>
    <modules>
        <Msupply_Feedback>
            <version>0.1.0</version>
        </Msupply_Feedback>
    </modules>
    <frontend>
        <routers>
            <feedback>
                <use>standard</use>
                <args>
                    <module>Msupply_Feedback</module>
                    <frontName>feedback</frontName>
                </args>
            </feedback>
        </routers>
        <layout>
            <updates>
                <feedback>
                    <file>feedback.xml</file>
                </feedback>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <feedback>
                <use>admin</use>
                <args>
                    <module>Msupply_Feedback</module>
                    <frontName>feedback</frontName>
                </args>
            </feedback>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <feedback module="feedback">
                <title>Feedback</title>
                <sort_order>71</sort_order>
                <children>
                    <items module="feedback">
                        <title>Manage Feedback</title>
                        <sort_order>0</sort_order>
                        <action>feedback/adminhtml_feedback</action>
                    </items>
                </children>
            </feedback>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Msupply_Feedback>
                            <title>Feedback Module</title>
                            <sort_order>10</sort_order>
                        </Msupply_Feedback>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <feedback>
                    <file>feedback.xml</file>
                </feedback>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <feedback>
                <class>Msupply_Feedback_Model</class>
                <resourceModel>feedback_mysql4</resourceModel>
            </feedback>
            <feedback_mysql4>
                <class>Msupply_Feedback_Model_Mysql4</class>
                <entities>
                    <feedback>
                        <table>feedback</table>
                    </feedback>
                </entities>
            </feedback_mysql4>
        </models>
        <resources>
            <feedback_setup>
                <setup>
                    <module>Msupply_Feedback</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </feedback_setup>
            <feedback_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </feedback_write>
            <feedback_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </feedback_read>
        </resources>
        <blocks>
            <feedback>
                <class>Msupply_Feedback_Block</class>
            </feedback>
        </blocks>
        <helpers>
            <feedback>
                <class>Msupply_Feedback_Helper</class>
            </feedback>
        </helpers>
    </global>
</config>

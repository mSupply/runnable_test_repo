<?xml version="1.0"?>
<config>
    <modules>
        <Msupply_Productupload>
            <version>0.1.0</version>
        </Msupply_Productupload>
    </modules>
    <frontend>
        <routers>
            <productupload>
                <use>standard</use>
                <args>
                    <module>Msupply_Productupload</module>
                    <frontName>productupload</frontName>
                </args>
            </productupload>
        </routers>
        <layout>
            <updates>
                <productupload>
                    <file>productupload.xml</file>
                </productupload>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <productupload>
                <use>admin</use>
                <args>
                    <module>Msupply_Productupload</module>
                    <frontName>productupload</frontName>
                </args>
            </productupload>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <productupload module="productupload">
                <title>Product Upload</title>
                <sort_order>71</sort_order>
                <children>
                    <items module="productupload">
                        <title>Manage Product CSV</title>
                        <sort_order>0</sort_order>
                        <action>productupload/adminhtml_productupload</action>
                    </items>
                </children>
            </productupload>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Msupply_Productupload>
                            <title>Productupload Module</title>
                            <sort_order>10</sort_order>
                        </Msupply_Productupload>
						
						<system>
                        <children>
                            <config>
                                <children>
                                    <productupload>
                                        <title>Product Upload Tool</title>
                                    </productupload>
                                </children>
                            </config>
                        </children>
						</system>
						
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <productupload>
                    <file>productupload.xml</file>
                </productupload>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <productupload>
                <class>Msupply_Productupload_Model</class>
                <resourceModel>productupload_mysql4</resourceModel>
            </productupload>
            <productupload_mysql4>
                <class>Msupply_Productupload_Model_Mysql4</class>
                <entities>
                    <productupload>
                        <table>productupload</table>
                    </productupload>
                </entities>
            </productupload_mysql4>
        </models>
        <resources>
            <productupload_setup>
                <setup>
                    <module>Msupply_Productupload</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productupload_setup>
            <productupload_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productupload_write>
            <productupload_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productupload_read>
        </resources>
        <blocks>
            <productupload>
                <class>Msupply_Productupload_Block</class>
            </productupload>
        </blocks>
        <helpers>
            <productupload>
                <class>Msupply_Productupload_Helper</class>
            </productupload>
        </helpers>
    </global>
</config>

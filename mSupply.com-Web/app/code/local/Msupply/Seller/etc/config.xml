<?xml version="1.0"?>
<config>
    <modules>
        <Msupply_Seller>
            <version>0.1.0</version>
        </Msupply_Seller>
    </modules>
    <frontend>
        <routers>
            <seller>
                <use>standard</use>
                <args>
                    <module>Msupply_Seller</module>
                    <frontName>seller</frontName>
                </args>
            </seller>
        </routers>
        <layout>
            <updates>
                <seller>
                    <file>seller.xml</file>
                </seller>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <seller>
                <use>admin</use>
                <args>
                    <module>Msupply_Seller</module>
                    <frontName>seller</frontName>
                </args>
            </seller>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <seller module="seller">
                <title>Seller</title>
                <sort_order>71</sort_order>
                <children>
                    <items module="seller">
                        <title>Seller List</title>
                        <sort_order>0</sort_order>
                        <action>seller/adminhtml_seller</action>
                    </items>
                </children>
            </seller>
        </menu>
        <acl>
            <resources>
			<admin>
				<children>
					<seller translate="title" module="seller">
						<title>Seller</title>
						<sort_order>10</sort_order>

						<children>
							<items translate="title" module="seller">
								<title>Seller List</title>
							</items>                        
						</children>
					</seller>
				</children>
			</admin>
		</resources>
	    </acl>
        <layout>
            <updates>
                <seller>
                    <file>seller.xml</file>
                </seller>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <seller>
                <class>Msupply_Seller_Model</class>
                <resourceModel>seller_mysql4</resourceModel>
            </seller>
            <seller_mysql4>
                <class>Msupply_Seller_Model_Mysql4</class>
                <entities>
                    <seller>
                        <table>seller</table>
                    </seller>
                </entities>
            </seller_mysql4>
        </models>
        <resources>
            <seller_setup>
                <setup>
                    <module>Msupply_Seller</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </seller_setup>
            <seller_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </seller_write>
            <seller_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </seller_read>
        </resources>
        <blocks>
            <seller>
                <class>Msupply_Seller_Block</class>
            </seller>
        </blocks>
        <helpers>
            <seller>
                <class>Msupply_Seller_Helper</class>
            </seller>
        </helpers>
    </global>
</config>

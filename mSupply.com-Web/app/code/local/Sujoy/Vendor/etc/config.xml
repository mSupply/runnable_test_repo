<?xml version="1.0"?>
<config>
    <modules>
        <Sujoy_Vendor>
            <version>0.1.0</version>
        </Sujoy_Vendor>
    </modules>
    <frontend>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>Sujoy_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Sujoy_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<vendor module="vendor">
				<title>Vendor</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="vendor">
						<title>Manage Vendors</title>
						<sort_order>0</sort_order>
						<action>vendor/adminhtml_vendor</action>
					</items>
				</children>
			</vendor>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Sujoy_Vendor>
							<title>Vendor Module</title>
							<sort_order>10</sort_order>
						</Sujoy_Vendor>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <vendor>
                <class>Sujoy_Vendor_Model</class>
                <resourceModel>vendor_mysql4</resourceModel>
            </vendor>
            <vendor_mysql4>
                <class>Sujoy_Vendor_Model_Mysql4</class>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                </entities>
            </vendor_mysql4>
        </models>
        <resources>
            <vendor_setup>
                <setup>
                    <module>Sujoy_Vendor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
        <blocks>
            <vendor>
                <class>Sujoy_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
            <vendor>
                <class>Sujoy_Vendor_Helper</class>
            </vendor>
        </helpers>
    </global>
</config>
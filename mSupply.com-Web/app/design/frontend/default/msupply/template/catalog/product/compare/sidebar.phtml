?>
<?php 
$_helper = $this->helper('catalog/product_compare');
$_items = $_helper->getItemCount() > 0 ? $_helper->getItemCollection() : null;
?>

<?php if($_helper->getItemCount() > 0): ?>

<div class="block block-list block-compare">
    <div class="block-title">
        <strong><span><?php echo $this->__('Compare Products') ?>
            <?php if($_helper->getItemCount() > 0): ?> 
                <small><?php echo $this->__('(%d)', $_helper->getItemCount()) ?></small>
            <?php endif; ?>
        </span></strong>
    </div>
    <div class="block-content">
        <ol id="compare-items">
        <?php 
		$i = 0;
		foreach($_items as $_index => $_item): 
		?>
            <li class="item">
                <input type="hidden" class="compare-item-id" value="<?php echo $_item->getId() ?>" />
               
				<?php  $product = Mage::getModel("catalog/product")->load($_item->getProductId()); ?>
                 <img src="<?php echo Mage::helper('catalog/image')->init($product, 'small_image')->keepFrame(false)->resize(50);?>" height="50" width="50"/>
				 <a href="<?php echo $_helper->getRemoveUrl($_item) ?>" title="<?php echo $this->__('Remove This Item') ?>" class="btn-remove">
				 <i class="fa fa-times"></i>				 
				 </a>
				
                <p class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>">
				
					<?php if( strlen($this->helper('catalog/output')->productAttribute($_item, $_item->getName(), 'name')) > 20 ){
						echo substr($this->helper('catalog/output')->productAttribute($_item, $_item->getName(), 'name'), 0, 20). "...";
                    } else {
                        echo $_item->getName();
                   }?>
				
				</a></p>
				
            </li>
        <?php 
		if(++$i > 3) break;
		endforeach; 
		?>
        </ol>
        <script type="text/javascript">decorateList('compare-items')</script>
			<a class="close-all-prod" href="<?php echo $_helper->getClearListUrl() ?>">
				<i class="fa fa-times"></i>
			</a>
			<div class="actions">
            
            <button type="button" title="<?php echo $this->__('Compare') ?>" class="button" onclick="submitCompare();"><?php echo $this->__('Compare') ?></button>
        </div>
    </div>
</div>
<?php endif; ?>


<script>
function submitCompare()
{   
    var count = '<?php echo $_helper->getItemCount(); ?>';
	if(count == 1)
	{
	alert("Please add two or more items to compare");	
	}
    else
    {
	popWin('<?php echo $_helper->getListUrl() ?>','compare','top:0,left:0,width=820,height=600,resizable=yes,scrollbars=yes');	
	}		
	
}
</script>
 
    </div>

</form>

<script type="text/javascript">

//<![CDATA[
var discountForm = new VarienForm('discount-coupon-form');
discountForm.submit = function (isRemove) {
    if (isRemove) {
        $('coupon_code').removeClassName('required-entry');
        $('remove-coupone').value = "1";
    } else {
        $('coupon_code').addClassName('required-entry');
        $('remove-coupone').value = "0";
    }
    return VarienForm.prototype.submit.bind(discountForm)();
}
//]]>

jQuery.fn.firstWord = function() {
  var text = this.text().trim().split(" ");
  var first = text.shift();
  if(first == 'Coupon' || first == 'Please')
  {
	  jQuery(".cart-message-top").css("display", "none");
	  jQuery(".coupon-message").css("display", "block");
  }
  else
  {
	  jQuery(".coupon-message").css("display", "none");
	  jQuery(".cart-message-top").css("display", "block");
  }  
};

jQuery(document).ready(function() {
   jQuery(".coupon-message .messages span").firstWord();
});
</script>
  
<form id="discount-coupon-form"	 action="<?php echo $this->getUrl('checkout/cart/couponPost') ?>" method="post"> 
    <div class="discount">
        <h2	><?php echo $this->__('Apply Coupon Code') ?></h2> 
	
        <div class="discount-form	col-lg-12 col-md-12 col-sm-12 col-xs-12 pad0 mt1em">
            <label for="coupon_code"><?php echo $this->__('Enter your coupon code if you have one.') ?></label>
            <input type="hidden" name="remove" id="remove-coupone" value="0" />
            <div class="coupon-box">
			
                 <input class="input-text" id="coupon_code" placeholder="your coupon code" 	name="coupon_code" value="<?php echo $this->escapeHtml($this->getCouponCode()) ?>" /> 
				
				 <input type="button" title="<?php echo $this->__('Apply Coupon') ?>" class="button apply_code" onclick="discountForm.submit(false)" value="<?php echo $this->__('Apply Coupon') ?>"/>
				 

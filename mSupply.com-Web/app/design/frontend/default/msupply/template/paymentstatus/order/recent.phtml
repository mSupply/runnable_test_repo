<div class="box-account box-recent col-xs-12">
<?php $_orders = $this->getOrders(); ?>
    <div class="box-head box-title col-xs-12">
        <h4 class="box-title col-xs-6"><?php echo $this->__('Recent Orders') ?></h4>
        <?php if( sizeof($_orders->getItems()) > 0 ): ?><a class="view-all-orders"  href="<?php echo $this->getUrl('sales/order/history') ?>"><?php echo $this->__('View All Orders') ?></a><?php endif; ?>
    </div>

<div class="table-mobile">
<?php if( sizeof($_orders->getItems()) > 0 ): ?>
    <table class="data-table col-xs-12" id="my-orders-table">
    <col width="1" />
    <col width="1" />
    <col />
    <col width="1" />
    <col width="1" />
    <col width="1" />
        <thead>
            <tr>
                <th class="order-table-width"><?php echo $this->__('Order ID') ?></th>
                <th class="order-table-width"><?php echo $this->__('Date') ?></th>
                <th class="order-table-width"><?php echo $this->__('Ship To') ?></th>
                <th class="order-table-width"><span class="nobr"><?php echo $this->__('Order Total') ?></span></th>
                <th class="order-table-width status"><?php echo $this->__('Order Status') ?></th>
                <th class="order-table-width">View Order</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($_orders as $_order): ?>
                <tr>
                    <td><?php echo $_order->getRealOrderId() ?></td>
                    <td><span class="nobr"><?php echo date("d/m/Y", strtotime($_order->getCreatedAtStoreDate())) ?></span></td>
                    <td><?php echo $_order->getShippingAddress() ? $this->escapeHtml($_order->getShippingAddress()->getName()) : '&nbsp;' ?></td>
                    <td><?php echo $_order->formatPrice($_order->getGrandTotal()) ?></td>
                    <td><?php echo $_order->getStatusLabel() ?></td>
                    <td class="a-center text-center">
                        <span class="nobr">
                        <a class="btn-order fa fa-list-alt" href="<?php echo $this->getViewUrl($_order) ?>"></a>
                        <?php if ($this->helper('sales/reorder')->canReorder($_order)) : ?>
                            <span class="separator">|</span> <a href="<?php echo $this->getReorderUrl($_order) ?>" class="link-reorder"><?php echo $this->__('Reorder') ?></a>
                        <?php endif ?>
                        </span>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
  </div> 
   <script type="text/javascript">decorateTable('my-orders-table')

jQuery("#my-orders-table td:contains('Confirmed')").css("color","#49BAB6");

jQuery("#my-orders-table td:contains('Pending')").css("color","#FFD64E");

jQuery("#my-orders-table td:contains('Shipped')").css("color","#49BAB6");

 
</script>
<?php else: ?>
    <p><?php echo $this->__('You have placed no orders.'); ?></p>
<?php endif; ?>
</div>
